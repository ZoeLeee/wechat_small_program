/**app.wxss**/
@import './pages/css/iconFont.wxss';

page{
  background: #f4f2f0;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "lucida grande",
                 "lucida sans unicode",
                 lucida,
                 helvetica,
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "WenQuanYi Micro Hei",
                 sans-serif;
}

/* 滚动条优化 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

swiper{
  width: 100%;
  height:calc( 100% - 50px);
}
scroll-view{
  width: 100%;
  height:calc( 100% - 50px);
}