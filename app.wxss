@import './pages/css/iconFont.wxss';
@import './pages/css/weui.wxss';


page{
  background: #f4f2f0;
}

.page {
  height: 100vh;
  box-sizing: border-box;
  font-family: "lucida grande",
                 "lucida sans unicode",
                 lucida,
                 helvetica,
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "WenQuanYi Micro Hei",
                 sans-serif;
}
.page__bd{
  height:100%;
}

/* 滚动条优化 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.flex{
  width: 100%;
  display: flex;
}