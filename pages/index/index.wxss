.page>.page__bd>view:first-child{
  width: 100%;
  display: flex;
  align-items: center;
}
.page>.page__bd>view:first-child>search{
  flex:1 ;
}
.page>.page__bd>view:first-child>navigator{
  padding: 0 5px;
}
.music-home{
  height: calc(100% - 92px);
}
.music-home .weui-navbar{
  background-color: #fff;
}
.music-home .weui-tab__panel{
  padding: 20rpx;
}
.music-home .weui-tab__content{
  margin-top: 90rpx;
}
.music-home .weui-navbar__slider{
  background-color: #DA5E56;
}
.music-home .weui-navbar__item.weui-bar__item_on {
  color: #DA5E56;
}
.music-home .weui-flex .weui-flex__item{
  text-align: center;
}
.music-home .weui-flex .weui-flex__item text{
