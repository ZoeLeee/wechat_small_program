/**index.wxss**/
.flex{
  width: 100%;
  display: flex;
}
.header {
  justify-content: space-around;
}

.header input {
  border-radius: 50px;
   background-color: #cccccc; 
  text-indent: 40rpx;
  padding: 5rpx 20rpx;
  font-size: 0.7rem;
}
.nav{

  justify-content: space-around;  
}
.title{
  font-size: 0.7rem;
  color: #ccc;
}
.history{
  margin: 1rem 0.5rem;
}
.book>view{
  margin: 1rem 0;
  padding: 0.5rem 0;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.amusement{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background: #fff;
  padding-left:1rem; 
}
.amusement>text{
  flex: 0 1 33.3333%;
  margin-bottom: 1rem;
}

.footer{
  position: absolute;
  bottom: 0;
  left: 0;
}