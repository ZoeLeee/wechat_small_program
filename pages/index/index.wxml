<!--index.wxml-->
<view class="container">
  <view class="flex header">
    <view>
      登陆
    </view>
    <view class="">
      <input  type="text" confirm-type="search" style="text-indent: 10px;color:#333;" placeholder="红楼梦" />
    </view>
    <view>
      <text class="iconfont icon-history"></text>
      <text class="iconfont icon-download"></text>
    </view>
  </view>
  <view class="flex nav">
    <text>分类</text>
    <text>推荐</text>
    <text>精品</text>
    <text>直播</text>
    <text>广播</text>
  </view>
  <scroll-view class="">
    <swiper>
      <swiper-item>
          <!--最近浏览-->
          <view class="history">
            <view class="title">最近浏览</view>
            <block wx:for="{{historys}}" wx:key="{{index}}">
              <navigator 
                url="{{item.href}}" 
                hover-class="navigator-hover" 
                open-type="navigate">{{item.title}}</navigator>
            </block>
          </view>
          <view class="book">
            <block wx:for="{{bookCategory}}" wx:key="{{index}}">
              <view>
                <text>
                  <text  class="iconfont {{item.icon}}"></text>{{item.title}}
                </text>
                <block wx:for="{{item.category}}" wx:key="{{index}}">
                    <text>{{item.title}}</text>
                </block>
              </view>
            </block>
          </view>
          <!-- 娱乐 -->
          <view class="amusement">
              <block wx:for="{{amusement}}" wx:key="{{index}}">
                <text>
                  <text  class="iconfont {{item.icon}}"></text>{{item.title}}
                </text>
              </block>
          </view>
          <view>知识</view>
      </swiper-item>
      <swiper-item>
          推荐区  
      </swiper-item>
      <swiper-item>
          精品区
      </swiper-item>
      <swiper-item>
          直播区
      </swiper-item>
      <swiper-item>
          广播区
      </swiper-item>
    </swiper>
  </scroll-view>

  <view class="footer">
    <text >首页</text>
    <text >发现</text>
    <text >我的</text>
  </view>
</view>
